{
  "name": "despensa",
  "type": "module",
  "packageManager": "pnpm@10.7.0",
  "scripts": {
    "dev": "tsx watch src/shared/app.ts",
    "db:generate": "pnpm drizzle-kit generate --name",
    "db:migrate": "pnpm drizzle-kit migrate",
    "db:studio": "pnpm drizzle-kit studio",
    "format": "biome format --write .",
    "lint": "biome check .",
    "lint:ci": "biome ci .",
    "lint:fix": "biome check --write --unsafe .",
    "build": "tsup src"
  },
  "dependencies": {
    "@hono/node-server": "^1.13.8",
    "bcryptjs": "^3.0.2",
    "dotenv": "^16.4.7",
    "drizzle-orm": "^0.39.3",
    "hono": "^4.7.2",
    "pg": "^8.14.0",
    "tsup": "^8.3.6",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@arthurfiorette/biomejs-config": "^1.0.7",
    "@biomejs/biome": "^1.9.4",
    "@types/node": "^20.11.17",
    "@types/pg": "^8.11.11",
    "drizzle-kit": "^0.30.4",
    "tsx": "^4.19.3",
    "typescript": "^5.7.3"
  }
}
